<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE struts PUBLIC
    "-//Apache Software Foundation//DTD Struts Configuration 2.0//EN"
    "http://struts.apache.org/dtds/struts-2.3.dtd">
<struts>
	<!-- -->
	<package name="abstract_struts" namespace="/" abstract="true" extends="struts-default">
		<interceptors>
			<interceptor name="checkLogin" class="com.interceptor.CheckLoginInterceptor" />
			<interceptor-stack name="loginInterceptor">
				<interceptor-ref name="checkLogin" />
				<interceptor-ref name="defaultStack" />
			</interceptor-stack>
		</interceptors>
		
		<default-interceptor-ref name="loginInterceptor"></default-interceptor-ref>
		
		<global-results>
			<result name="login">/login.jsp</result>
		</global-results>

	</package>

	<include file="config/struts2/struts-user.xml" />

</struts>