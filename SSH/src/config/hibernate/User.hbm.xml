<?xml version='1.0' encoding='UTF-8'?>
<!DOCTYPE hibernate-mapping PUBLIC  
    "-//Hibernate/Hibernate mapping DTD 3.0//EN"  
    "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<!-- 用户的映射文件 -->
<hibernate-mapping package="com.entity">
	<class name="com.entity.User" table="user_info">
		<id name="userId" column="user_id" length="16" type="int">
			<generator class="native"></generator>
		</id>
		<!-- 实体类的属性 -->
		<property name="userName" column="user_name" length="32" type="int" />
		<property name="password" column="password" length="32" type="string" />
		<property name="nameCn" column="name_cn" length="64" type="string" />
		<property name="sex" column="sex" length="4" type="string" />
		<property name="phone" column="phone" length="16" type="string" />
		<property name="email" column="email" length="64" type="string" />
		<property name="birthday" column="birthday" type="date" />
		<property name="loginTime" column="login_date" type="date" />
		<property name="failTimes" column="fail_times" length="2" type="int" />
		<property name="useFlag" column="used_flag" length="2" type="string" />
	</class>
</hibernate-mapping>