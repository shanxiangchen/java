<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" 
	"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.app.mapper.BankLinesTypeMapper">
	<resultMap type="BankLinesType" id="BankLinesTypeResultMap">
		<id column="LINES_TYPE_ID" property="linesTypeId" />
		<result column="LINES_TYPE" property="linesType" />
		<result column="LINES_NUMBER" property="linesNumber" />
		<result column="LINES_MAX_VALUE" property="linesMaxValue" />
		<result column="PROMPT_INFORMATION" property="promptInformation" />

	</resultMap>
	<select id="bankLinesTypePageList" resultMap="BankLinesTypeResultMap"
		parameterType="BankLinesType">
		select e.* from bank_lines_type e where lines_type_id is not null
		ORDER BY LINES_TYPE_ID DESC
	</select>
 
	<select id="getLinesTypebyid" resultMap="BankLinesTypeResultMap"
		parameterType="String">
		select * from bank_lines_type where
		LINES_TYPE_ID=#{linesTypeId,jdbcType=VARCHAR}
	</select>



	<delete id="deleteLinesType" parameterType="String">
		delete from
		bank_lines_type where LINES_TYPE_ID=#{linesTypeId,jdbcType=VARCHAR}
	</delete>

	<update id="updateLinesValue" parameterType="BankLinesType"> 
		update bank_lines_type set
		LINES_MAX_VALUE=#{linesMaxValue,jdbcType=VARCHAR},
		LINES_TYPE=#{linesType,jdbcType=VARCHAR},LINES_NUMBER=#{linesNumber,jdbcType=INTEGER},PROMPT_INFORMATION=#{promptInformation,jdbcType=VARCHAR}
		where LINES_TYPE_ID=#{linesTypeId,jdbcType=VARCHAR}
	</update>

	<update id="updateLinesTypes" parameterType="BankLinesType">
		update bank_lines_type set
		LINES_TYPE=#{linesType,jdbcType=VARCHAR},LINES_NUMBER=#{linesNumber,jdbcType=INTEGER},PROMPT_INFORMATION=#{promptInformation,jdbcType=VARCHAR}
		where LINES_TYPE_ID=#{linesTypeId,jdbcType=VARCHAR}
	</update>
	<update id="updateLinesMaxValue" parameterType="BankLinesType">
	    update bank_lines_type set
		LINES_MAX_VALUE=#{linesMaxValue,jdbcType=VARCHAR}
	</update>

</mapper>