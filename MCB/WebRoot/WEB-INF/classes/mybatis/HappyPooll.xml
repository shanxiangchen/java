<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" 
	"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.app.mapper.HappyPoollMapper">
	<resultMap type="HappyPooll" id="HappyPoolResultMap">
			<id column="HAPPYPOOLl_ID"  property="happyPoollId" />
			<result column="HAPPYPOOLl_NAME"  property="happyPoollName" />
			<result column="HAPPYPOOLl_ORDER" property="happyPoollorder"/>
	</resultMap>
	<select id="listPageHappyPooll" resultMap="HappyPoolResultMap" parameterType="HappyPooll">
	   SELECT e.* FROM bank_happypooll e where  HAPPYPOOLl_ID  is not null ORDER BY HAPPYPOOLl_ID DESC
	</select>
	 
	<insert id="savehp" parameterType="HappyPooll" >
			insert into bank_happypooll (HAPPYPOOLl_NAME,HAPPYPOOLl_ORDER) values(#{happyPoollName},#{happyPoollorder})
	</insert>
	
	<delete id="delete" parameterType="String" >
			delete from bank_happypooll where HAPPYPOOLl_ID=#{happyPoollId,jdbcType=VARCHAR}
	</delete>

	<update id="update" parameterType="HappyPooll">
			update bank_happypooll set  Happypooll_Name=#{happyPoollName} where HAPPYPOOLl_ID=#{happyPoollId,jdbcType=VARCHAR}
	</update>
	
	<select id="getHappyPoollByid" parameterType="String" resultMap="HappyPoolResultMap">
			select * from bank_happypooll where HAPPYPOOLl_ID=#{happyPoollId,jdbcType=VARCHAR}
	</select>
	
 	<select id="getHappyPoolllorder" parameterType="HappyPooll" resultType="int">
	 select count(1) from bank_happypooll where HAPPYPOOLl_ORDER=#{happyPoollorder}
	</select>
</mapper>