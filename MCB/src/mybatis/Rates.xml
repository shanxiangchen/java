<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" 
	"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.app.mapper.RatesMapper">
	<resultMap type="com.app.entity.Ratess" id="RatesrResultMap">
		<id column="ID" property="id"></id>
		<result column="RATESS" property="ratess"></result>
	</resultMap>
	
	<!-- 分期类型初始化数据 -->
	<select id="listbankrates" resultMap="RatesrResultMap">
			SELECT t.ID,t.RATESS FROM bank_rates t 
	</select>
	
	
	<select id="getStatess" parameterType="int" resultMap="RatesrResultMap">
		SELECT * FROM bank_rates t WHERE t.ID=#{id}
	</select>
	
	
	
		<update id="updateStatess" parameterType="com.app.entity.Ratess">
			update bank_rates a set a.RATESS=#{ratess} where  a.ID=#{id}
		</update>
</mapper>
