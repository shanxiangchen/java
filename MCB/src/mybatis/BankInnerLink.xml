<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" 
	"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.app.mapper.BankInnerLinkMapper">
	<resultMap type="BankInnerLink" id="bankInnerLinkList">
		<id column="link_id" property="linkId"/>
		<result column="link_name" property="linkName"/>
		<result column="link_no" property="linkNo"/>
		<result column="link_url" property="linkURL"/>
	</resultMap>
	
	<select id="selectBankInnerLinkPageList" parameterType="BankInnerLink" resultMap="bankInnerLinkList">
		select link_id,link_name,link_no,link_URL from bank_in_link where 1=1
		<if test="linkName!='' and linkName!=null and linkName!='null'">
			and link_name like '%${linkName}%'
		</if>
	</select>
	
	<select id="selectBankInnerLinkNum" parameterType="BankInnerLink" resultType="int">
		select count(*) from bank_in_link where link_no = #{linkNo}
	</select>
	
	<insert id="insertBankInnerLink" parameterType="BankInnerLink" >
		insert into bank_in_link (link_name,link_no,link_url) values(#{linkName},#{linkNo},#{linkURL})
	</insert>
	
	<select id="selectBankInnerLink" parameterType="BankInnerLink" resultMap="bankInnerLinkList">
		select link_id,link_name,link_no,link_URL from bank_in_link where link_no = #{linkNo}
	</select>
	
	<select id="selectBankInnerLinkByLinkNo" parameterType="BankInnerLink" resultMap="bankInnerLinkList">
		select link_id,link_name,link_no,link_URL from bank_in_link where link_no = #{linkNo}
	</select>
	
	<delete id="deleteBankInnerLink">
		delete from bank_in_link where link_no = #{linkNo}
	</delete>
	
	<update id="updateSaveBankInnerLink" parameterType="BankInnerLink">
		update bank_in_link set link_name=#{linkName},
		<if test="linkNo != null and linkNo != '' and linkNo != 'null'">
		link_no=#{linkNo},
		</if>
		link_url=#{linkURL} where link_id=#{linkId}
	</update>
	
	<select id="getBankInnerLinkByNo" parameterType="String" resultMap="bankInnerLinkList">
		select link_id,link_name,link_no,link_URL from bank_in_link where link_no = #{linkNo}
	</select>
	
</mapper>
