<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" 
	"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.app.mapper.TypeMapper">

	<resultMap type="Type" id="typeResultMap">
		<id column="odds_shop_type_id" property="oddsshoptypeid" />
		<result column="odds_shop_type" property="oddsshoptype" />
	</resultMap>

	<select id="listPagetypes" parameterType="Type" resultMap="typeResultMap">
        SELECT * FROM bank_odds_shop_type e WHERE odds_shop_type_id is not null
		<if test="oddsshoptype!=null and oddsshoptype!=''">
			and  odds_shop_type like "%"#{oddsshoptype}"%"
		</if>
	</select>
 
	<!-- 信息查询 -->
	<select id="listPagetype" parameterType="Type" resultMap="typeResultMap">
		SELECT t.odds_shop_type_id,t.odds_shop_type FROM bank_odds_shop_type t
		where
		t.odds_shop_type_id is not null
		<!-- <if test="oddsshoptype!=null and oddsshoptype!=''"> and t.odds_shop_type 
			like '%'||#{oddsshoptype}||'%' </if> -->
	</select>



	<select id="getCountByName" parameterType="Type" resultType="Integer">
		select count(odds_shop_type_id) from bank_odds_shop_type where
		odds_shop_type=#{oddsshoptype}
	</select>


	<insert id="inserttype" parameterType="Type" keyProperty="oddsshoptypeid">
		insert
		into bank_odds_shop_type (odds_shop_type) values
		(#{oddsshoptype,jdbcType=VARCHAR})
	</insert>

	<select id="gettypeById" parameterType="String" resultMap="typeResultMap">
		select * from bank_odds_shop_type where
		odds_shop_type_id=#{oddsshoptypeid,jdbcType=VARCHAR}
	</select>

	<update id="updatetype" parameterType="Type">
		update bank_odds_shop_type
		set
		odds_shop_type=#{oddsshoptype,jdbcType=VARCHAR},
		odds_shop_type_id=#{oddsshoptypeid,jdbcType=VARCHAR}
		where
		odds_shop_type_id=#{oddsshoptypeid,jdbcType=VARCHAR}
	</update>


	<delete id="deletetype" parameterType="String">
		delete from
		bank_odds_shop_type where
		odds_shop_type_id=#{oddsshoptypeid,jdbcType=VARCHAR}
	</delete>
</mapper>  